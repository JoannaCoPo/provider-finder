<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <div class="container p-1 my-1 border border-warning border-2">
    <h2 class="text-center">Search for a provider</h2>
  </div>

  <div class="pt-3">
    <p>For some ideas on how to get back the best results for you search, please see the <%= link_to 'Search Tips', search_tips_path, method: :get, target: :_blank %></p>
  </div>
    <div class="m-1 pb-5">
      <%= bootstrap_form_with url: provider_results_path, method: :get, local: true do |form| %>
        <strong><%= form.text_area :first_name, label: "First Name:", hide_label: false, placeholder: "Enter provider first name here" %></strong>
        <strong><%= form.text_area :last_name, label: "Last Name:", hide_label: false, placeholder: "Enter provider last name here" %></strong>
        <strong><%= form.text_area :specialty, label: "Specialty or area of practice:", hide_label: false, placeholder: "Enter specialty here, eg. 'dental'" %></strong>
        <strong><%= form.text_area :state, label: "Provider location by State:", hide_label: false, placeholder: "Enter state abbreviation here, eg. 'CO'. Please also include at least one of the other search options above: First Name, Last Name, or Specialty" %></strong>
        <%= form.submit 'Find me a provider!' %>
      <% end %>
    </div>
  </div>
</body>
