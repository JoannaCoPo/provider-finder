<div class="container pt-5">
  <div class="d-grid">
    <div class="btn btn-warning">
      <%= link_to 'Back to provider search page', provider_search_path, :class => "btn" %>
    </div>
  </div>

  <br>

  <div class="container p-1 my-1 border border-warning border-2">
    <h2 class="text-center">Provider Search Results:</h2>
  </div>

  <br>

  <% if params[:last_name] && params[:state] %>
    <% @providers.each do |provider| %>
      <dt><p><%= provider.full_name %></p></dt>
      <p>NPI Number: <%= provider.npi_number %></p>
      <p>specialty: <%= provider.specialty %></p>
      <p><%= provider.addresses %></p>
      <p><%= provider.phone %></p>
      <hr class="dashed">
    <% end %>
  <% end %>

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container p-1 my-1 border border-warning border-2">
      <p class="text-center"><%= page_entries_info @providers %></p>
      <p class="text-center"><%= will_paginate @providers, renderer: BootstrapPagination::Rails %></p>
    </div>
  </body>
</div>
